{
	"$schema": "http://json.schemastore.org/tsconfig",

	"compilerOptions": {
		"outDir": "../../../../../lib",
		"rootDir": "../../../../../src",

		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"inlineSources": true,
		"experimentalDecorators": true,
		"strict": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"types": [],

		"module": "commonjs",
		"target": "es2019",
		"lib": ["es2019"]
	},
	"include": ["../../../../../src/**/*.ts", "../../../../../src/**/*.tsx"]
}
